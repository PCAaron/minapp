/* miniprogram/pages/home/home.wxss */
.swiper-image{
    width: 100%;
    height: 100%;
}

.classify-title{
    margin: 40rpx 20rpx 20rpx;
    font-weight: bold;
}

.playlist-wrap{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    margin-top: 10rpx;
    flex-direction: row;
}

.notice{
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 40rpx 20rpx;
    padding: 20rpx;
    box-shadow: 0 4rpx 8rpx 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
}
.notice-left{
    width: 350rpx;
    margin-bottom: 20rpx;
}
.notice-right{
    flex: 1;
    color: #FFA5C2;
}
.adContainer{
    width: 100% !important;
    height: 100% !important;
    background-color: #F5F5F6;
    display: flex;
    justify-content: center;
    align-items: center;
}