/* components/playlist/playlist.wxss */
.playlist-container{
    width: 350rpx;
    position: relative;
    padding-bottom: 20rpx;
    margin-bottom: 40rpx;
    box-shadow: 0 6rpx 10rpx 0 rgba(0, 0, 0, .19);
}

.playlist-img{
    width: 100%;
    height: 220rpx;
    border-radius: 6rpx;
}

.playlist-playcount{
    font-size: 24rpx;
    color: #fff;
    text-shadow: 1px 0 0 rgba(0, 0, 0, .3);
    position: absolute;
    right: 10rpx;
    top:4rpx;
    padding-left: 26rpx;
    background-image:url('data:image/svg+xml;base64,');
    background-size: 30rpx 30rpx;
    background-repeat: no-repeat;
}

.playlist-name{
    font-size: 26rpx;
    line-height: 1.3;
    text-align: left;
    padding-left: 20rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
}