/* components/search/search.wxss */
.container{
    display: flex;
    align-items: center;
    margin-left: 20rpx;
    position: relative;
}
.bar{
    flex: 1;
    height: 68rpx;
    font-size: 28rpx;
    border-radius: 50px;
    background-color: #f5f5f5;
    padding-left: 60rpx;
}
.search{
    background-color: #FFA5C2;
    color: #fff;
    margin-left: 20rpx !important;
    font-size: 24rpx;
    height: 68rpx !important;
    min-height: 68rpx !important;
    line-height: 68rpx !important;
    width: 144rpx !important;
    padding: 0;
}

.in-bar{
    color:#999;
}
.icon-sousuo-find{
    position: absolute;
    top: 50%;
    transform: translate(16rpx, -50%);
    color:#9f9f9f;
}