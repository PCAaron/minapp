<view class="doommview">
    <block wx:for="{{doommData}}" wx:key="id">
        <text wx:if="{{item.display}}" class="aon" 
            data-blogid="{{item._id}}"
             bind:tap="goComment"
            style="animation: first {{item.time}}s linear forwards;top:{{item.top}}%;color:{{item.color}};font-weight:bolder">
            {{item.text}}
        </text>
    </block>
</view>